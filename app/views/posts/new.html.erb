<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_with(model: @post) do |form| %>
      <div class="form-group">
        <%= form.label :images %>
        <%= form.file_field :images, multiple: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit t('.upload_images'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
